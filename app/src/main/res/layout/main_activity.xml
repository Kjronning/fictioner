<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="se.hkr.fictioner.main.MainPresenter" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">

        <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/username"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/username_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_margin"
            android:background="@color/colorPrimary"
            android:text="@{presenter.username}" />

        <TextView
            android:id="@+id/password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_margin"
            android:text="@string/password"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/password_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_margin"
            android:background="@color/colorPrimary"
            android:inputType="textPassword"
            android:text="@{presenter.password}" />
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/log_in"
            android:layout_marginTop="30sp"
            android:layout_below="@id/password_input"
            android:onClick="@{presenter::handleLoginButtonPress}"/>

    </RelativeLayout>
</layout>